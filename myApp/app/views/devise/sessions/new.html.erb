<div id="log_in">
<h2 id="log_in_style">Log in</h2> 
</div>
<div id="log">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,{:id => 'email_label'}%><br />
    <%= f.email_field :email, id: 'email_id' %>
  </div>

  <div class="field">
    <%= f.label :password ,{:id => 'password_label'}%><br />
    <%= f.password_field :password,  id: 'password_id' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me ,id: 'remember_checkbox' %>
      <%= f.label :remember_me ,{:id => 'remember_label'} %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in",{ :class => 'log-button'} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
